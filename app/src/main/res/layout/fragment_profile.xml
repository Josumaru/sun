<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/teal_700"
    >


    <ImageView
        android:id="@+id/pentagon_top"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:paddingHorizontal="10dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916"
        app:srcCompat="@drawable/bg_chatbackground" />

    <ImageView
        android:id="@+id/notif_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.572"
        app:srcCompat='@drawable/rectangle_18' />

    <ImageView
        android:id="@+id/profil_pict"
        android:layout_width="161dp"
        android:layout_height="143dp"
        android:layout_marginEnd="228dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144"
        app:srcCompat="@drawable/ic_eclipes" />

    <ImageView
        android:id="@+id/inbox_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.439"
        app:srcCompat='@drawable/rectangle_18' />

    <ImageView
        android:id="@+id/inbox_logo"
        android:layout_width="32dp"
        android:layout_height="37dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="260dp"
        app:layout_constraintBottom_toBottomOf="@+id/inbox_box"
        app:layout_constraintEnd_toEndOf="@+id/inbox_box"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pentagon_top"
        app:layout_constraintTop_toTopOf="@+id/inbox_box"
        app:srcCompat='@drawable/material_symbols_inbox' />

    <TextView
        android:id="@+id/inbox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/alata_regular"
        android:text="Inbox"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/inbox_box"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toEndOf="@+id/inbox_logo"
        app:layout_constraintTop_toTopOf="@+id/pentagon_top" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="189dp"
        android:layout_height="56dp"
        android:layout_marginStart="172dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/alata_regular"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profil_pict"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="192dp"
        android:layout_height="20dp"
        android:fontFamily="@font/alata_regular"
        android:text="email@gmail.com"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_text"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/notification_logo"
        android:layout_width="32dp"
        android:layout_height="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/notif_box"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="@+id/notif_box"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/icomoon_free_notification" />

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:fontFamily="@font/alata_regular"
        android:text="Notification"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/notif_box"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toEndOf="@+id/notification_logo"
        app:layout_constraintTop_toTopOf="@+id/pentagon_top" />

    <Button
        android:id="@+id/signout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:background="@drawable/rounded_background"
        android:fontFamily="@font/alata_regular"
        android:text="Sign Out"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notif_box" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="436dp"
        android:fontFamily="@font/alata_regular"
        android:text="Inbox"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pentagon_top"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        android:fontFamily="@font/alata_regular"
        android:text="Notif"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/pentagon_top"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profil_pict" />


</androidx.constraintlayout.widget.ConstraintLayout>