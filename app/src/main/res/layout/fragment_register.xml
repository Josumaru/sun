<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterFragment"
    android:background="@color/teal_700">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/register_email"
            android:layout_width="337dp"
            android:layout_height="51dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:fontFamily="@font/alata_regular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white_teal"
            android:textColorHint="@color/white_teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_name" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="337dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:fontFamily="@font/alata_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/white_teal"
            android:textColorHint="@color/white_teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_email" />

        <EditText
            android:id="@+id/register_confirm"
            android:layout_width="337dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:fontFamily="@font/alata_regular"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/white_teal"
            android:textColorHint="@color/white_teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_password" />

        <ImageView
            android:id="@+id/ic_password_register"
            android:layout_width="19dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_password"
            app:layout_constraintBottom_toBottomOf="@+id/register_password"
            app:layout_constraintEnd_toEndOf="@+id/register_password"
            app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintStart_toStartOf="@+id/register_password"
            app:layout_constraintTop_toTopOf="@+id/register_password"
            app:layout_constraintVertical_bias="0.176" />

        <ImageView
            android:id="@+id/ic_email_register"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_email"
            app:layout_constraintBottom_toBottomOf="@+id/register_email"
            app:layout_constraintEnd_toEndOf="@+id/register_password"
            app:layout_constraintHorizontal_bias="0.975"
            app:layout_constraintStart_toStartOf="@+id/register_password"
            app:layout_constraintTop_toTopOf="@+id/register_email" />

        <ImageView
            android:id="@+id/pentagon_top"
            android:layout_width="match_parent"
            android:layout_height="659dp"
            android:layout_marginBottom="560dp"
            android:paddingHorizontal="10dp"
            android:paddingBottom="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pentagon"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/pentagon_bottom"
            android:layout_width="match_parent"
            android:layout_height="656dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:rotationX="180"
            android:rotationY="180"
            android:scaleType="fitXY"
            android:src="@drawable/bg_pentagon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/register_email"
            app:layout_constraintVertical_bias="0.894" />

        <ImageView
            android:id="@+id/ic_arrow_register"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/rounded_background"
            android:padding="10dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/pentagon_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.922"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.564" />

        <EditText
            android:id="@+id/register_name"
            android:inputType="textPersonName"
            android:layout_width="337dp"
            android:layout_height="50dp"
            android:layout_marginTop="84dp"
            android:background="@drawable/edit_text_background"
            android:ems="10"
            android:fontFamily="@font/alata_regular"
            android:hint="Name"
            android:textColor="@color/white_teal"
            android:textColorHint="@color/white_teal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pentagon_top" />

        <ImageView
            android:id="@+id/ic_name_register"
            android:layout_width="16dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_person"
            app:layout_constraintBottom_toBottomOf="@+id/register_name"
            app:layout_constraintEnd_toEndOf="@+id/register_name"
            app:layout_constraintHorizontal_bias="0.975"
            app:layout_constraintStart_toStartOf="@+id/register_name"
            app:layout_constraintTop_toTopOf="@+id/register_name" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="183dp"
            android:layout_height="48dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/rounded_background"
            android:fontFamily="@font/alata_regular"
            android:text="REGISTER"
            android:gravity="center"
            android:textColor="@color/white_teal"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="@+id/register_confirm"
            app:layout_constraintTop_toBottomOf="@+id/register_confirm" />

        <ImageView
            android:id="@+id/login_google"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/rounded_background"
            android:padding="10dp"
            android:src="@drawable/ic_google"
            app:layout_constraintBottom_toBottomOf="@+id/register_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.463"
            app:layout_constraintStart_toEndOf="@+id/text_or"
            app:layout_constraintTop_toTopOf="@+id/register_button"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/text_or"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="OR"
            android:textColor="@color/white_teal"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/register_button"
            app:layout_constraintStart_toEndOf="@+id/register_button"
            app:layout_constraintTop_toTopOf="@+id/register_button"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/ic_confirm_register"
            android:layout_width="19dp"
            android:layout_height="21dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_password"
            app:layout_constraintBottom_toBottomOf="@+id/register_confirm"
            app:layout_constraintEnd_toEndOf="@+id/register_confirm"
            app:layout_constraintHorizontal_bias="0.974"
            app:layout_constraintStart_toStartOf="@+id/register_confirm"
            app:layout_constraintTop_toTopOf="@+id/register_confirm"
            app:layout_constraintVertical_bias="0.235" />

        <TextView
            android:id="@+id/extraText"
            android:layout_width="388dp"
            android:layout_height="54dp"
            android:text="Tidak Boleh ada Field yang Kosong"
            android:textColor="#FF0000"
            android:textSize="14sp"
            android:textAlignment="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/pentagon_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_confirm"
            app:layout_constraintVertical_bias="0.078" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>