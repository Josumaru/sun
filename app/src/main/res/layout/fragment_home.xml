<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    android:background="@color/teal_700">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_card"
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_rounded_transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/btn_jadwal_kuliah"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_rounded_rectangle"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="Jadwal Kuliah"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="@+id/home_card"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/home_card"
            app:layout_constraintTop_toBottomOf="@+id/home_card" />

        <TextView
            android:id="@+id/btn_mata_kuliah"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_rounded_rectangle"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="Mata Kuliah"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_jadwal_kuliah" />

        <TextView
            android:id="@+id/btn_kartu_hasil_studi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_rounded_rectangle"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="Kartu Hasil Studi"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="@+id/home_card"
            app:layout_constraintTop_toBottomOf="@+id/btn_mata_kuliah" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/alata_regular"
            android:text="Absensi (25)"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_kartu_hasil_studi"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btn_kartu_hasil_studi"
            app:layout_constraintTop_toBottomOf="@+id/btn_kartu_hasil_studi" />

        <TextView
            android:id="@+id/card_1"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:background="@drawable/bg_presence_card"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="OOP\n3 ×"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/card_2" />

        <TextView
            android:id="@+id/card_2"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_presence_card"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="TBA\n4 ×"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_3"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toEndOf="@+id/card_1"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/card_3"
            android:layout_width="120dp"
            android:layout_height="135dp"
            android:background="@drawable/bg_presence_card"
            android:fontFamily="@font/alata_regular"
            android:gravity="center"
            android:text="SO\n2 ×"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/card_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>